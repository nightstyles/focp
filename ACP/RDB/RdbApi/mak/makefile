
ifeq ($(FOCP_VOB_DIR),)
	FOCP_VOB_DIR=/vob
endif

FOCP_MODULE_NAME=RdbApi
FOCP_TARGET_TYPE=DLL

ifneq ($(RDB_SUPPORT_MEMORY_DB),)
	FOCP_MACRO_DEFINES+=RDB_SUPPORT_MEMORY_DB
	RDB_SERVER_API=1
endif
ifneq ($(RDB_SUPPORT_DISK_DB),)
	FOCP_MACRO_DEFINES+=RDB_SUPPORT_DISK_DB
	RDB_SERVER_API=1
endif
ifneq ($(RDB_SUPPORT_REMOTE_DB),)
	FOCP_MACRO_DEFINES+=RDB_SUPPORT_REMOTE_DB
	RDB_CLIENT_API=1
endif

FOCP_LIB_LIST+=VmmApi

FOCP_INCLUDE_LIST+=$(FOCP_VOB_DIR)/AFW/AFC 
FOCP_INCLUDE_LIST+=$(FOCP_VOB_DIR)/ACP/RDB/VmmApi/inc 
FOCP_INCLUDE_LIST+=$(FOCP_VOB_DIR)/ACP/RDB/RdbApi/inc
FOCP_INCLUDE_LIST+=$(FOCP_VOB_DIR)/ACP/RDB/RdbApi/RdbUtility/inc

ifneq ($(RDB_SERVER_API),)
	FOCP_INCLUDE_LIST+=$(FOCP_VOB_DIR)/ACP/RDB/RdbApi/RdbServer/inc
	FOCP_SOURCE_LIST+=$(FOCP_VOB_DIR)/ACP/RDB/RdbApi/RdbServer/src
endif

ifneq ($(RDB_CLIENT_API),)
	FOCP_INCLUDE_LIST+=$(FOCP_VOB_DIR)/ACP/RDB/RdbApi/RdbClient/inc
	FOCP_SOURCE_LIST+=$(FOCP_VOB_DIR)/ACP/RDB/RdbApi/RdbClient/src
endif

FOCP_SOURCE_LIST+=$(FOCP_VOB_DIR)/ACP/RDB/RdbApi/RdbUtility/src

include $(FOCP_VOB_DIR)/AFW/AFC/AfcLib.incl
include $(FOCP_VOB_DIR)/MakeOption/option.incl
